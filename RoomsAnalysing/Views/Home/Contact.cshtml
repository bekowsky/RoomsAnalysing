
@{
    ViewBag.Title = "Уведомления";
}
<script src="~/Scripts/Action.js"></script>
<h2>@ViewBag.Title.</h2>

<h3>Чтобы получать уведомления на Telegram нужно познакомится с ботом &#x40;RoomsAnalyzer_bot, написав ему любое сообщение</h3>

@using (Ajax.BeginForm("MailListPage", new AjaxOptions { UpdateTargetId = "results" }))
{
    <input type="hidden" id="actt" name="act" value="search">
    <div class="row">
        <div class="col-xs-8">

            <div class="col-xs-12">

                <input class="col-xs-10 form-control" type="text" name="mail" id="mail" placeholder="Почта" value=""  />
                <input class="col-xs-2 form-control" type="text" placeholder="&#x40;mail.ru" readonly>

            </div>


            <div class="col-xs-12">
                <input class="col-xs-2 form-control" type="text" placeholder="&#x40;" readonly>
                <input class="col-xs-10 form-control" type="text" name="telegram" id="telegram" placeholder="username" value=""  />
            </div>
        </div>
        <div class="col-xs-4">
            <button type="submit" onclick="search()" class=" btn-lg btn-primary">Найти</button>
            <button type="submit" onclick="drop()" class="btn-lg btn-danger">Удалить</button>
        </div>
    </div>

    <div id="results"></div>
    <script>
        function drop() {
            document.getElementById("actt").value = "drop";
        }

        function search() {
            document.getElementById("actt").value = "search";
        }
    </script>
}


